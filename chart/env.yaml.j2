fullnameOverride: {{ KUBERNETES.COMMON_FULLNAME_OVERRIDE }}

image:
  repository: {{ IMAGES.GAIUS_COMMON_TAG.split(":")[0] }}
  pullPolicy: Always
  # Overrides the image tag whose default is the chart version.
  tag: {{ IMAGES.GAIUS_COMMON_TAG.split(":")[1] }}

imagePullSecrets:
  - name: acr-auth

config:
  secret_key: {{ SECRETS.DJANGO_SECRET_KEY }}
  debug: false

nginx:
  port: 8000

db:
  db_host: {{ POSTGRESQL.POSTGRESQL_DB_HOST }}
  db_port: {{ POSTGRESQL.POSTGRESQL_DB_PORT }}
  db_user: {{ POSTGRESQL.POSTGRESQL_DB_USER }}
  db_password: {{ POSTGRESQL.POSTGRESQL_DB_PASS }}
  db_parameters: {{ POSTGRESQL.POSTGRESQL_DB_PARAMETERS }}
  db_database: {{ DATABASES.COMMON_DB_NAME }}

ingress:
  enabled: false
  annotations: {}
  hosts:
    - host: common.uat.{{ GLOBALS.ROOT_DOMAIN }}
      paths:
      - /
    - host: api.uat.{{ GLOBALS.ROOT_DOMAIN }}
      paths:
      - /api/v1/auth/
    - host: api.uat.{{ GLOBALS.ROOT_DOMAIN }}
      paths:
      - /api/v1/common/

env:
  TIME_ZONE: "{{ GLOBALS.TIME_ZONE }}"
  USE_KEYCLOAK: "true"
  DJANGO_ALLOWED_HOSTS: "{{ DJANGO.ALLOWED_HOSTS }}"

  DJANGO_SETTINGS_MODULE: "{{ DJANGO.DJANGO_SETTINGS_MODULE }}"

  COMMON_DB_NAME: "{{ DATABASES.COMMON_DB_NAME }}"

  REDIS_HOST: "{{ REDIS.REDIS_HOST }}"
  REDIS_PORT: "{{ REDIS.REDIS_PORT }}"
  REDIS_DATABASE: "{{ REDIS.REDIS_DATABASE_DEFAULT }}"
  REDIS_DATABASE_CELERY: "{{ REDIS.REDIS_DATABASE_CELERY }}"
  REDIS_PASSWORD: "{{ REDIS.REDIS_PASSWORD }}"

  KONG_DB_HOST: "{{ POSTGRESQL.POSTGRESQL_DB_HOST }}"
  KONG_DB_PORT: "{{ POSTGRESQL.POSTGRESQL_DB_PORT }}"
  KONG_DB_NAME: "{{ DATABASES.NODE_DB_NAME }}"
  KONG_DB_USER: "{{ POSTGRESQL.POSTGRESQL_DB_USER_NODE }}"
  KONG_DB_PASS: "{{ POSTGRESQL.POSTGRESQL_DB_PASS_NODE }}"

  DJANGO_ADMIN_URL: "{{ DJANGO.DJANGO_ADMIN_URL }}"

  DJANGO_USE_STORAGE: "true"

  DJANGO_AZURE_ACCOUNT_NAME: "{{ AZURE.DJANGO_AZURE_ACCOUNT_NAME }}"
  #DJANGO_AZURE_CUSTOM_DOMAIN: "{{ AZURE.DJANGO_AZURE_CUSTOM_DOMAIN }}"
  DJANGO_AZURE_ACCOUNT_KEY: "{{ AZURE.DJANGO_AZURE_ACCOUNT_KEY }}"

  SLACK_TOKEN: {{ SLACK.SLACK_TOKEN }}
  TELEGRAMBOT_TOKEN: {{ TELEGRAM.TELEGRAMBOT_TOKEN }}
  TELEGRAMBOT_CHAT_ID: {{ TELEGRAM.TELEGRAMBOT_TOKEN }}

  CONN_MAX_AGE: "{{ DJANGO.CONN_MAX_AGE }}"
  FCM_APIKEY: "{{ FCM.FCM_APIKEY }}"

  SLACK_WEBHOOK_URL: "{{ SLACK.SLACK_WEBHOOK_URL }}"